<%if @user == current_user %>
  <h1><%= @user.name %>'s Profile Page</h1>


<div class="container">
  <%= render "users/shared/profile_picture" %><br>
  <strong>Profile Picture</strong>

</div>



  <div class="col-md-4 ">
    <h3>My Biography</h3>
    Name: <%= @user.name %> <br>
    Species: <%= @user.species %> <br>
    User: <%= @user.gender %> <br>
    Birthday: <%= @user.birthday %> <br>


<!-- friends list -->
<h3>My Friends</h3>
    <% @user.friends.each do |friend| %>
      <div class="container">

      <%= friend.name %> <%= link_to "Check your friend's page!", "/users/#{friend.id}/profile_page" %>

      </div>
    <% end %>
  </div>

<% else %>
  <%= render '/users/profile/profile_page' %>

<% end %>
