<div class="container">
  <br>
  <h2>Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {:multipart => true}) do |f| %>
    <%= devise_error_messages! %>

  <div class="col-sm-4 inner-right-sm animated fadeInUp">
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true %>
    </div>

    <br>

    <div class="field">
      <%= f.label :profile_Picture %><br />
      <%= f.file_field :avatar %>
    </div>

    <br>

    <div class="field">
      <%= f.label :gender, 'Male', :value => 'Male' %>
      <%= f.radio_button :gender, 'Male', autofocus: true %><br>
      <%= f.label :gender, 'Female', :value => 'Female' %>
      <%= f.radio_button :gender, 'Female', autofocus: true %><br>
    </div>
    <br>
    <div class="field">
      <%= f.label :birthday %><br />
      <%= f.date_select :birthday, {order: [:month, :day, :year], prompt: { day: 'Select day', month: 'Select month', year: 'Select year' }, start_year: Date.today.year, end_year: Date.today.year - 100}, {required: true} %>
    </div>

    <br>

    <div class="field">
      <%= f.label :species %><br />
      <%= f.text_field :species, autofocus: true %>
    </div>

    <br>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <br>

      <div class="field">
        <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

  <div class="col-sm-6 col-sm-offset-2">
      <div class="actions">
        <%= f.submit class: 'btn btn-small' %>
      </div>
  </div>
  <%= link_to "Back", :back, class: 'btn btn-small' %>
  <% end %>
  </div>


  <div class="col-sm-4 col-sm-offset-2">
    <h3>Cancel my account</h3>
    <h4>Unhappy?</h4> <%= button_to "Cancel my account", registration_path(resource_name), class: 'btn btn-small', data: { confirm: "Are you sure?" }, method: :delete %>
  </div>
</div>
