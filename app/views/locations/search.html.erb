<br>

<h2>Search Hangout Location</h2>

<%= form_tag location_search_path, :method => :get do %>
  <p>
  <div id="form" class="col-sm-6 inner-right-md animated fadeInUp">
    <%= text_field_tag :search, params[:search], placeholder: 'Type here' %>
    <div class="col-sm-6 col-sm-offset-3">
      <%= submit_tag "Find Pals Nearby", class: 'btn btn-small', :name => nil %>

    </div>

  </div>
  </p>
<% end %>

<div class="row">
  <div class="col-sm-12">
    <div class="row">

        <h2>Listing Hangouts</h2>

        <table>
          <thead>
            <tr>
              <th>Name</th>
              <th>Address</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% if params[:search].present? %>
              <% @locations.each do |location| %>
                <% location.users.each do |x| %>
              <tr>
                <td><%= x.name %></td>
                <td><%= link_to 'Show', location, class: 'btn btn-small' %></td>
              <% if location.users.include?(current_user) %>
                <td><%= link_to 'Edit', edit_location_path(location), class: 'btn btn-small' %></td>
                <td><%= link_to 'Destroy', location, class: 'btn btn-small', method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
              </tr>
                <% end %>
              <% end %>
          </tbody>
        </table>
          <div class="col-sm-4 col-sm-offset-2">
          <%= link_to "Search again", location_search_path, class: 'btn btn-small' %>
        </div>
        <% end %>

    </div>
  </div>
</div>

<br>
<%= render 'map' %>
