<p id="notice"><%= notice %></p>

<h1>Listing Favorites</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favorites.each do |favorite| %>
      <tr>
        <td><%= link_to 'Show', favorite %></td>

        <% if current_user==favorite.user_id %>
        <td><%= link_to 'Edit', edit_favorite_path(favorite) %></td>
        <td><%= link_to 'Destroy', favorite, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end  %>

        <%= link_to("Like This!", like_favorite_path) %><br>
        <% if favorite.get_likes.size == 1 %>
          <%= "#{favorite.get_likes.size} person like this" %>
        <% else favorite.get_likes.size > 1 %>
          <%= "#{favorite.get_likes.size} people like this" %>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Favorite', new_favorite_path %>
