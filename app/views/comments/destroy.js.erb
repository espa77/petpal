if (<%= @commentable.comments.length %> > 1) {
  $('#comments h2').first().text("<%= @commentable.comments.length %> Comments");
  }
else if (<%= @commentable.comments.length %> === 1) {
  $('#comments h2').first().text("<%= @commentable.comments.length %> Comment");
 } else {
   $('#comments h2').first().text("No comments yet, but you can be first!");
 };
