      <!-- ============================================================= SECTION – BLOG ============================================================= -->
      <section id="blog" class="light-bg">
        <div class="container inner-top-sm inner-bottom classic-blog no-sidebar">
          <div class="row inner-bottom-xs">
            <div class="col-sm-12">
                <ul class="filter text-center">
                  <li><a href="#" data-filter=".photography">Photography</a></li>
                </ul><!-- /.filter -->
            </div><!-- /.col -->
          </div><!-- /.row -->
          <div class="row">
            <div class="col-md-9 center-block">
              <div class="posts sidemeta">
                <% @posts.each do |post|  %>
                <div class="post format-image">
                  <div class="date-wrapper">
                    <div class="date">
                      <span class="Date"><%= post.created_at.to_s.split[0] %></span>
                    </div><!-- /.date -->
                  </div><!-- /.date-wrapper -->
                  <div class="format-wrapper">
                    <a href="#" data-filter=".format-image"><i class="round-image-50"><%= image_tag(User.find(post.user_id).avatar.url(:thumb)) %></i></a>
                  </div><!-- /.format-wrapper -->
                  <div class="post-content">
                    <figure class="icn-link post-media">
                      <a href="/posts/<%=post.id%>"><%= image_tag post.attachment.url(:medium) %></a>
                    </figure><!-- /.post-media -->
                    <h2 class="post-title">
                      <a href="blog-post.html">The girl and the summerlight</a>
                    </h2>
                    <ul class="meta">
                      <li class="categories"><a href="/posts/<%=post.id%>">Photography</a></li>
                      <li class="comments"><a href="/posts/<%=post.id%>"><%= post.comments.length %></a></li>
                      <li class="likes"><a href="/posts/<%=post.id%>"> <%= post.get_likes.size %></a></li>
                    </ul><!-- /.meta -->
                    <p><%=post.content %></p>
                    <!-- button stuff -->
                    <ul>
                      <a href="/posts/<%=post.id%>" class="btn">Show Post</a>
                    <% if current_user.id == post.user_id %>
                      <a href="/posts/<%=post.id%>/edit" class="btn">Edit Post</a>
                      <a href="posts/<%=post.id%>/destroy" class="btn">Delete Post</a>
                    <% end %>
                    </ul>

                  </div><!-- /.post-content -->
                </div><!-- /.post -->
                <% end %>
              </div>
              <ul class="pagination">
                <li><a href="#">Prev</a></li>
                <li class="active"><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">Next</a></li>
              </ul><!-- /.pagination -->
          </div>  <!--  col -->
            <aside class="col-md-3">
              <div class="sidebox widget">
                <h4>Random Posts</h4>
                <div class="row thumbs gap-xs">
                  <% 6.times do |i|%>
                  <% @random_post = Post.all[rand(0..(Post.all.length-1))] if Post.all.length>0 %>
                  <div class="col-xs-6 thumb">
                    <figure class="icon-overlay icn-link">
                      <a href="/posts/<%=@random_post.id%>"><img width="250" height="150" src="<%= @random_post.attachment %>" alt=""></a>
                    </figure>
                  </div><!-- /.thumb -->
                  <% end  %>
                </div><!-- /.row -->
              </div><!-- /.widget -->
              </aside>
        </div>  <!--  row -->
      <!-- ============================================================= SECTION – BLOG : END ============================================================= -->
    </main>
