<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Attachment</th>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><img width="250" height="150" src="<%= post.attachment %>"></td>
        <td><%= post.content %></td>
        <td><%= User.find(post.user_id).name %></td>
        <td><%= link_to 'Show', post %></td>
        <% if current_user == post.user_id %>
        <td><%= link_to 'Edit', edit_post_path(post) %></td> |
        <td><%= link_to 'Destroy', "/posts/#{post.id}/destroy", data: { confirm: 'Are you sure?' } %></td>
        <% end  %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
