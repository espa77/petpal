<p id="notice"><%= notice %></p>

<p>
  <strong>Attachment:</strong>
  <img width="250" height="150" src="<%= @post.attachment %>">
</p>

<p>
  <strong>User:</strong>
  <%= @post.user %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<%= link_to("Like This!", like_post_path) %><br>
<% if @post.get_likes.size == 1 %>
  <%= "#{@post.get_likes.size} person like this" %>
<% else @post.get_likes.size > 1 %>
  <%= "#{@post.get_likes.size} people like this" %>
<% end %>


  <%= link_to("Disike This!", unlike_post_path) %><br>


<h4>Comments</h4>
<hr>
<%= render 'comments/form', commentable: @post %>
<br>
<div class="comments">
  <ul>
    <%= render @comments %>
  </ul>
</div>
<%= render 'shared/actions', resource: @post %>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
